/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

*,
:before,
::after {
	box-sizing: border-box;
}

html {
	font-size: 62.5%;
	overflow-x: hidden;
	scroll-behavior: smooth;

	@media only screen and (max-width: 650px) {
		font-size: 55%;
		overflow-x: hidden;
	}
}

.wrapper {
	@apply mx-auto max-w-[144rem] bg-gray-700 px-[2.5rem];
}
